{
  "swagger": "2.0",
  "info": {
    "version": "1.0",
    "title": "hello App Api接口定义文档"
  },
  "host": "localhost:8082",
  "basePath": "/",
  "tags": [
    {
      "name": "02-0、主页",
      "description": "App主页部分的处理"
    }
  ],
  "paths": {
    "/v4/home": {
      "get": {
        "tags": [
          "02-0、主页"
        ],
        "summary": "【主页】顶部Tab",
        "description": "如用户登录，则加入accessToken，如果没有则返回系统默认",
        "operationId": "getHomeCategoryUsingGET",
        "produces": [
          "*/*"
        ],
        "parameters": [
          {
            "name": "accessToken",
            "in": "query",
            "description": "【公共参数】用户访问的认证信息",
            "required": false,
            "type": "string",
            "default": "b7c55893b14e45cd9e1f0faec3245945"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/RespEntity«HomeUiEntity»"
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        },
        "deprecated": false
      }
    },
    "/v4/home/find": {
      "get": {
        "tags": [
          "02-0、主页"
        ],
        "summary": "【发现主页】",
        "operationId": "findHomePlusUsingGET",
        "produces": [
          "*/*"
        ],
        "parameters": [
          {
            "name": "accessToken",
            "in": "query",
            "description": "【公共参数】用户访问的认证信息",
            "required": false,
            "type": "string",
            "default": "b7c55893b14e45cd9e1f0faec3245945"
          },
          {
            "name": "counter",
            "in": "query",
            "description": "刷新计数器，从0开始，每次++",
            "required": true,
            "type": "integer",
            "format": "int32",
            "allowEmptyValue": false
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/RespEntity«List«SectionEntity»»"
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        },
        "deprecated": false
      }
    }
  },
  "definitions": {
    "RespEntity«HomeUiEntity»": {
      "type": "object",
      "required": [
        "code",
        "message",
        "obscure"
      ],
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32",
          "description": "执行结果的状态"
        },
        "data": {
          "description": "正常返回的数据体,若执行失败该部分会为null，若无数据为空[]",
          "$ref": "#/definitions/HomeUiEntity"
        },
        "message": {
          "type": "string",
          "description": "附加消息,以code为准，返回信息不一定完整"
        },
        "obscure": {
          "type": "boolean",
          "description": "数据是否加密压缩"
        },
        "taskMessage": {
          "type": "string",
          "description": "任务的执行消息，如果不为空就弹出"
        }
      },
      "title": "RespEntity«HomeUiEntity»"
    },
    "RespEntity«List«SectionEntity»»": {
      "type": "object",
      "required": [
        "code",
        "message",
        "obscure"
      ],
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32",
          "description": "执行结果的状态"
        },
        "data": {
          "type": "array",
          "description": "正常返回的数据体,若执行失败该部分会为null，若无数据为空[]",
          "items": {
            "$ref": "#/definitions/SectionEntity"
          }
        },
        "message": {
          "type": "string",
          "description": "附加消息,以code为准，返回信息不一定完整"
        },
        "obscure": {
          "type": "boolean",
          "description": "数据是否加密压缩"
        },
        "taskMessage": {
          "type": "string",
          "description": "任务的执行消息，如果不为空就弹出"
        }
      },
      "title": "RespEntity«List«SectionEntity»»"
    },
    "HomeUiEntity": {
      "type": "object",
      "required": [
        "banners",
        "internalTime",
        "selectedTab",
        "state",
        "tabs"
      ],
      "properties": {
        "banners": {
          "type": "array",
          "description": "滚动显示视图",
          "items": {
            "$ref": "#/definitions/BannerUiEntity"
          }
        },
        "hotKey": {
          "type": "array",
          "description": "搜索的热门关键字，若无，在搜索时则不显示热门关键字",
          "items": {
            "$ref": "#/definitions/HotKeyEntity"
          }
        },
        "internalTime": {
          "type": "integer",
          "format": "int32",
          "description": "Banner的切换时间,单位为毫秒"
        },
        "selectedTab": {
          "type": "integer",
          "format": "int32",
          "description": "当前选中的Tab，从0开始"
        },
        "state": {
          "type": "boolean",
          "description": "是否当前版本是在审核"
        }
      },
      "title": "HomeUiEntity",
      "description": "主页的头部基本结构信息"
    },
    "BannerUiEntity": {
      "type": "object",
      "required": [
        "photo",
        "url"
      ],
      "properties": {
        "code": {
          "type": "string",
          "description": "编号，无意义"
        },
        "hint": {
          "type": "string"
        },
        "id": {
          "type": "integer",
          "format": "int32",
          "description": "编号，无意义"
        },
        "photo": {
          "type": "string",
          "description": "图片URL"
        },
        "url": {
          "type": "string",
          "description": "跳转scheme"
        }
      },
      "title": "BannerUiEntity"
    },
    "HotKeyEntity": {
      "type": "object",
      "required": [
        "tags",
        "type"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "中文名称，前端忽略"
        },
        "tags": {
          "type": "array",
          "description": "包含的热门搜索关键字，编号按顺序自增加",
          "items": {
            "type": "string"
          }
        },
        "type": {
          "type": "integer",
          "format": "int32",
          "description": "类型，包含如下0全部、1视频、2文章、3商品、4课程",
          "minimum": -128,
          "maximum": 127
        }
      },
      "title": "HotKeyEntity",
      "description": "分类热门关键字结构"
    },
    "SectionEntity": {
      "type": "object",
      "required": [
        "internalTime"
      ],
      "properties": {
        "internalTime": {
          "type": "integer",
          "format": "int32",
          "description": "Banner的切换时间,单位为毫秒"
        },
        "items": {
          "type": "object",
          "description": "包含的子项"
        },
        "title": {
          "type": "string",
          "description": "标题"
        },
        "type": {
          "type": "integer",
          "format": "int32",
          "description": "类型",
          "minimum": -128,
          "maximum": 127
        },
        "url": {
          "type": "string",
          "description": "更多跳转url"
        }
      },
      "title": "SectionEntity"
    }
  }
}
